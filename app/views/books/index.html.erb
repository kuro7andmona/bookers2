<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<h2>User info</h2>

<%= image_tag current_user.get_profile_image %>
<table class="table">
  <tbody>
<tr></tr>
<tr>
<th>name</th>
<th><%= current_user.name %></th>
</tr>
<tr>
<th>Introduction</th>
<th><%= current_user.introduction %></th>
</tr>
</tbody>
</table>
<div class="row">
    <a><%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    </a>
</div>

  <h2 class="mt-3">New book</h2>
<%=form_with model: @book do |f| %>

<div class="form-group">
<p>Title</p>
<%= f.text_field :title %>
</div>
<div class="form-group">
<p>Opinion</p>
<%= f.text_area :body %>
</div>
<div class="form-group">
<p><%= f.submit'Create Book', class:"btn btn-success" %></p>
<% end %>
</div>
</div>


<!--ユーザー投稿一覧-->
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
   <% @books.each do |book| %>
     <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= link_to book.title,  book_path(book.id) %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
</div>