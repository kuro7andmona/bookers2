<div>
   <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
   <div class="col-md-3">
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image %>
  <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>Introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
    <% end %>
  </div>


  <h2 class="mt-3">New book</h2>
<%=form_with model: @new_book do |f| %>

<div class="form-group">
<p>Title</p>
<%= f.text_field :title %>
</div>

<div class="form-group">
<p>Opinion</p>
<%= f.text_area :body %>
</div>

<div class="form-group">
 <p><%= f.submit'Create Book',class: "btn btn-success" %></p>
    <% end %>
</div>
</div>

<div class="col-md-8 offset-md-1">
<!--ユーザー投稿一覧-->
<h2>Book detail</h2>
</div>
<table class="table">
  <tbody>
    <tr>
      <td><%= link_to user_path(@user) do %>
           <%= image_tag @user.get_profile_image %>
          <% end %>
          <%= link_to @user.name, user_path(@user) %>
      </td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td>
          <%= link_to edit_book_path(@book), class:"btn btn-success" do %>
            Edit
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger" do %>
            Destroy
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>



