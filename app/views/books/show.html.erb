  <h1>New book</h1>
<%=form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<p><%= f.submit'Create Book' %></p>
<% end %>

<!--ユーザー投稿一覧-->
<h1>Book detail</h1>

<table>

     <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= book.user.name %></td>
      <td><%= link_to book.title,book_path(book) %></td>
      <td><<%= @book.body %></td>
      <% end %>
      <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    </tr>

</table>
