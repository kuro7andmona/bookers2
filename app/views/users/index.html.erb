
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<h1>User info</h1>
<%= image_tag current_user.get_profile_image %>
<table class="table">
<tbody>
<tr></tr>
<tr>
<th>name</th>
<th><%= current_user.name %></th>
</tr>
<tr>
<th>Introduction</th>
<th><%= current_user.introduction %></th>
</tr>
</tbody>
</table>
  <div class="row">
    <a><%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    </a>
    </div>


  <h2 class="mt-3">New book</h2>
<%=form_with model: @book do |f| %>
<form action="/books" accept-charset="UTF-8" method="post">
  <input type="hidden" name="authenticity_token" value="" autocomplete="off">

<div class="form-group">
<p>Title</p>
<input class="form-control book_title" type= "text" name="book[title]" id="book_title">
<!--%= f.text_field :title %-->
</div>
<div class="form-group">
<p>Opinion</p>
<textarea class=""></textarea>
<!--%= f.text_area :body %-->
</div>
<div class="form-group">
<%= f.submit'Create Book', class: "btn btn-success" %>
<% end %>
</div>
</form>

<!--ユーザー投稿一覧-->
<div class="col-md-8 ofset-md-1">
<h1>Users</h1>
<table class="table-hover table-inver">
  <thead></thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
  <tbody>
   <% @users.each do |user| %>
     <th>
      <td><%= image_tag user.get_profile_image %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show',  user_path(user.id) %></td>
      </th>
   <% end %>
</tbody>
</table>
</div>
</div>
</div>