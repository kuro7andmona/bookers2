<div>
  <%= flash[:notice] %>
</div>


<div class="container px-5 px-sm-0">
  <div class="row">
  <div class= col-md-3>
<h1>User info</h1>
<%= image_tag current_user.get_profile_image %>
<table class="table">
<tbody>
<tr></tr>
<tr>
<th>name</th>
<th><%= current_user.name %></th>
</tr>
<tr>
<th>Introduction</th>
<th><%= current_user.introduction %></th>
</tr>
</tbody>
</table>


<div class="row">
    <a><%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
      <% end %>
    </a>
    </div>

  <h2 class="mt-3">New book</h2>
<%=form_with model:@book do |f| %>
<form>
  <input type="hidden" name="authenticity_token" value="" autocompleate="off">
<div class="form-group">
<p>Title</p>
<input class="form-control book_title" type="text" name="book[title]" id="book_title">
<!--%= f.text_field :title %-->
</div>
<div class="form-group">
<p>Opinion</p>
<textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  <!--%= f.text_area :body %-->
</div>

<div class="form-group">
<%= f.submit'Create Book',class: "btn btn-success" %>
<% end %>
</div>
</form>
<!--ユーザー投稿一覧-->
<div class="col-md-8 ofset-md-1">

<h2>Books</h2>
<table class="table" table table-hover table-inverse>
  <thead></thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody></tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= link_to  book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
<% end %>
</table>
</div>
</div>
</div>





