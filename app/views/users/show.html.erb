<div>
   <%= flash[:notice] %>
 </div>
 <div class="container">


<h1>User info</h1>

<%= image_tag current_user.get_profile_image %>
<table class="table">
<tr>
<th>
<td><h5>name</h5></td>
<td><%= current_user.name %></td>
</th>
</tr>
<tr>
<td><h5>Introduction</h5></td>
<td><p><%= current_user.introduction %></p></td>
</tr>
</table>
<div class="row py-6 px-12 ">
    <p><%= link_to edit_user_path(current_user) do %>
    <button type="button" class=" btn btn-outline-secondary btn-block">
      <span class= "fas fa-user-cog "></span>
      </button>
      <% end %>
    </p>
    </div>




<div class="container">
  <h2>New book</h2>
<%=form_with model:@book do |f| %>

<h5>Title</h5>
<%= f.text_field :title %>

<h5>Opinion</h5>
<%= f.text_area :body %>

<p><%= f.submit'Create Book',class: "btn btn-success" %></p>
<% end %>
</div>
<!--ユーザー投稿一覧-->
<div class="col-xs-9">


<h1>Books</h1>
<table class='table table-hover table-inverse'>
<table>
  <thead>
    <tr>
      <th scope="row"></th>
      <th scop="row">Title</th>
      <th scop="row">Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>

      <td><%= link_to  book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>

 <% end %>
  </tbody>
</table>
<p><% link_to @user.name, user_path(@user.id) %></p>
</div>
</div>


