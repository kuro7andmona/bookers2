<div class="container px-5 px-sm-0">
  <div class="row d-flex">
  <div class= col-md-3>
<h1>User info</h1>
<%= image_tag current_user.get_profile_image %>
<table class="table">
<tbody>
<tr></tr>
<tr>
<th><h5>name</h5></th>
<th><%= current_user.name %></th>
</tr>
<tr>
<th><h5>Introduction</h5></th>
<th><%= current_user.introduction %></th>
</tr>
</tbody>
</table>


<div class="row d-flex">
    <p><%= link_to edit_user_path(current_user) do %>
    <button type="button" class="btn btn-outline-secondary btn-block">
      </button>
      <span class= "fas fa-user-cog "></span>
      <% end %>
    </p>
    </div>

  <h2 class="mt-3">New book</h2>
<%=form_with model:@book do |f| %>
<form>
<div class="form-group">
<h5>Title</h5>
<%= f.text_field :title %>
</div>
<div class="form-group">
<h5>Opinion</h5>
<%= f.text_area :body %>
</div>

<div class="form-group">
<%= f.submit'Create Book',class: "btn btn-success" %>
<% end %>
</form>
</div>
<!--ユーザー投稿一覧-->
<div class="col-md-8 ofset-md-1">


<h1>Books</h1>
<table class='table table-hover table-invers text-wrapper'>
  <thead></thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image %></td>
      <td><%= link_to  book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
<% end %>
  </tbody>
</table>
</div>
</div>
</div>





