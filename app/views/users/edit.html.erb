 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
 </div>
 </div>

<div class="row">

<p>Introduction</p>
<%= f.text_area :body %>
</div>

<div class="row">
  <div class="col"></div>
