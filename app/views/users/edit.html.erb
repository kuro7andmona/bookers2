<div class="container text-center col-3">
<h1>User info</h1>


<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>

<div class="row">
 <p>Name</p>
<%= f.text_field :name %>
</div>

<div class="row">
<p>Image</p>

 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
 </div>

<div class="row">
<p>Introduction</p>
<%= f.text_area :body %>
</div>

<p><%= f.submit'Update User',class: "btn btn-secondary" %></p>
<% end %>
</div>